{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@Components/*":[
        "src/components/Canvas/*",
        "src/components/ColorPalette/*",
        "src/components/SizeControl/*",
        "src/components/ActionPanel/*",
        "src/components/BrushPalette/*",
        "src/components/TitleHolder/*"
      ],
      "@Hooks/*":[
        "src/hooks/*"
      ]
    }
  },
  "include": ["./src"]
}
